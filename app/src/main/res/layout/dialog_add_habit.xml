<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <!-- Compact Header (Back button removed) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create Habit"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Save"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="18dp"
                app:backgroundTint="#4CAF50"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:minWidth="0dp"
                app:elevation="2dp"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
        </LinearLayout>

        <!-- Single Unified Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Habit Name Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What habit do you want to build?"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif-medium" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:hint="e.g., Morning workout"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#6B4FA0"
                    app:hintTextColor="#999999"
                    app:endIconMode="clear_text"
                    app:endIconTint="#BDBDBD"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editHabitName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Popular Habits -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:singleLine="false"
                    app:chipSpacing="6dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipWater"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="ðŸ’§ Drink Water"
                        android:textSize="12sp"
                        android:textColor="#0288D1"
                        app:chipBackgroundColor="#E1F5FE"
                        app:chipStrokeWidth="0dp"
                        app:chipCornerRadius="16dp"
                        app:chipMinHeight="32dp"
                        style="@style/Widget.MaterialComponents.Chip.Action" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipExercise"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="ðŸ’ª Exercise"
                        android:textSize="12sp"
                        android:textColor="#388E3C"
                        app:chipBackgroundColor="#E8F5E9"
                        app:chipStrokeWidth="0dp"
                        app:chipCornerRadius="16dp"
                        app:chipMinHeight="32dp"
                        style="@style/Widget.MaterialComponents.Chip.Action" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRead"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="ðŸ“š Read"
                        android:textSize="12sp"
                        android:textColor="#F57C00"
                        app:chipBackgroundColor="#FFF3E0"
                        app:chipStrokeWidth="0dp"
                        app:chipCornerRadius="16dp"
                        app:chipMinHeight="32dp"
                        style="@style/Widget.MaterialComponents.Chip.Action" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMeditate"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="ðŸ§˜ Meditate"
                        android:textSize="12sp"
                        android:textColor="#7B1FA2"
                        app:chipBackgroundColor="#F3E5F5"
                        app:chipStrokeWidth="0dp"
                        app:chipCornerRadius="16dp"
                        app:chipMinHeight="32dp"
                        style="@style/Widget.MaterialComponents.Chip.Action" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSleep"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="ðŸ˜´ Sleep Early"
                        android:textSize="12sp"
                        android:textColor="#5E35B1"
                        app:chipBackgroundColor="#EDE7F6"
                        app:chipStrokeWidth="0dp"
                        app:chipCornerRadius="16dp"
                        app:chipMinHeight="32dp"
                        style="@style/Widget.MaterialComponents.Chip.Action" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipJournal"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="âœï¸ Journal"
                        android:textSize="12sp"
                        android:textColor="#D84315"
                        app:chipBackgroundColor="#FBE9E7"
                        app:chipStrokeWidth="0dp"
                        app:chipCornerRadius="16dp"
                        app:chipMinHeight="32dp"
                        style="@style/Widget.MaterialComponents.Chip.Action" />
                </com.google.android.material.chip.ChipGroup>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginBottom="16dp" />

                <!-- Daily Target Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How many times per day?"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Visual Goal Selector Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardGoal1"
                        android:layout_width="0dp"
                        android:layout_height="68dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="#E0E0E0"
                        app:cardBackgroundColor="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="time"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardGoal3"
                        android:layout_width="0dp"
                        android:layout_height="68dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="#E0E0E0"
                        app:cardBackgroundColor="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="times"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardGoal5"
                        android:layout_width="0dp"
                        android:layout_height="68dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="#E0E0E0"
                        app:cardBackgroundColor="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="times"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardGoal10"
                        android:layout_width="0dp"
                        android:layout_height="68dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="#E0E0E0"
                        app:cardBackgroundColor="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#666666"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="times"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Custom Input Option -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or enter custom amount"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Custom number"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#6B4FA0"
                    app:hintTextColor="#999999"
                    app:suffixText="times/day"
                    app:suffixTextColor="#999999"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editHabitGoal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginBottom="16dp" />

                <!-- Reminder Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily Reminder"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get notified to stay on track"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@android:color/white"
                        app:trackTint="#6B4FA0" />
                </LinearLayout>

                <!-- Time Picker (shown when reminder is on) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTimePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="visible"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F8F9FA"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="Time"
                            android:src="@drawable/ic_clock"
                            android:tint="#006B4FA0" />

                        <TextView
                            android:id="@+id/textSelectedTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="9:00 AM"
                            android:textSize="14sp"
                            android:textColor="#1A1A1A"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:contentDescription="Select"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="#00BDBDBD" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Pro Tip Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F0E6FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="top">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="ðŸ’¡"
                            android:textSize="14sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Start small! Building consistency is more important than ambitious goals."
                            android:textSize="12sp"
                            android:textColor="#5E3A99"
                            android:lineSpacingExtra="2dp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>
</ScrollView>