<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- ðŸŸ¢ Emoji -->
        <TextView
            android:id="@+id/tvMoodEmoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="ðŸ˜Š"
            android:textSize="26sp" />

        <!-- ðŸŸ¢ Mood Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tvMoodLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvMoodNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Had a great day!"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvMoodDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05/10/2025 22:45"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginTop="1dp" />
        </LinearLayout>

        <!-- ðŸŸ£ Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEditMood"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Edit mood" />

            <ImageButton
                android:id="@+id/btnDeleteMood"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Delete mood"
                android:tint="@android:color/holo_red_dark" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
