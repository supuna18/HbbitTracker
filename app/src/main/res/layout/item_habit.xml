<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Habit Icon & Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textHabitIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textSize="24sp"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textHabitName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/textHabitGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal: 8 hours"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Action Icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp">

                <!-- Checkbox -->
                <CheckBox
                    android:id="@+id/checkboxComplete"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:button="@drawable/checkbox_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="4dp" />

                <!-- Edit Button -->
                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit Habit"
                    android:src="@drawable/ic_edit"
                    android:tint="#2196F3"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Delete Button -->
                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete Habit"
                    android:src="@drawable/ic_delete"
                    android:tint="#F44336"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>

        <!-- Progress Bar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressHabit"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            app:indicatorColor="@color/teal_700"
            app:trackColor="#E0E0E0"
            app:trackThickness="6dp"
            app:trackCornerRadius="3dp"
            android:layout_marginBottom="12dp" />

        <!-- Counter Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Decrease Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDecrease"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="#2196F3"
                app:cornerRadius="24dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />

            <!-- Counter Display -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/textCurrentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textProgressCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 / 8 hours"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Increase Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIncrease"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="#2196F3"
                app:cornerRadius="24dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
